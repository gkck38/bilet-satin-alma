# Apache .htaccess Configuration

# Rewrite engine'i aktifleştir
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # HTTPS yönlendirmesi (production için)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # www olmadan yönlendirme
    # RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
    # RewriteRule ^(.*)$ http://%1/$1 [R=301,L]
</IfModule>

# PHP ayarları
<IfModule mod_php.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>

# Güvenlik başlıkları
<IfModule mod_headers.c>
    # XSS koruması
    Header set X-XSS-Protection "1; mode=block"
    
    # Clickjacking koruması
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # MIME type sniffing koruması
    Header set X-Content-Type-Options "nosniff"
    
    # Referrer policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Dosya erişimini engelle
<FilesMatch "\.(sql|db|sqlite|sqlite3|ini|log|sh|inc|bak)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# .git ve diğer gizli dosyaları koru
<DirectoryMatch "^\.|\/\.">
    Order deny,allow
    Deny from all
</DirectoryMatch>

# Directory listing'i kapat
Options -Indexes

# Hata sayfaları (opsiyonel)
# ErrorDocument 404 /404.php
# ErrorDocument 403 /403.php
# ErrorDocument 500 /500.php

# Gzip compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Browser caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresDefault "access plus 2 days"
</IfModule>